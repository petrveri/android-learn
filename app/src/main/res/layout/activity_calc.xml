<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.et4334.appofpetr.CalcActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textCalcExpr" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_marginTop="28dp"
        android:onClick="onClickBtn7"
        android:layout_below="@+id/textCalcExpr"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/btn8"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:onClick="onClickBtn8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/btn9"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn8"
        android:onClick="onClickBtn9" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/btnDiv"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn9"
        android:onClick="onClickBtnDiv" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/btn4"
        android:layout_below="@+id/btn7"
        android:layout_toStartOf="@+id/btn7"
        android:layout_alignEnd="@+id/btn7"
        android:onClick="onClickBtn4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/btn5"
        android:layout_alignTop="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:onClick="onClickBtn5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/btn6"
        android:layout_alignTop="@+id/btn4"
        android:layout_toEndOf="@+id/btn5"
        android:onClick="onClickBtn6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/btnMul"
        android:layout_alignTop="@+id/btn4"
        android:layout_toEndOf="@+id/btn6"
        android:onClick="onClickBtnMult" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/btn1"
        android:layout_below="@+id/btn4"
        android:layout_toStartOf="@+id/btn7"
        android:layout_alignStart="@+id/btn7"
        android:layout_alignEnd="@+id/btn7"
        android:onClick="onClickBtn1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/btn2"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:onClick="onClickBtn2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/btn3"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn2"
        android:onClick="onClickBtn3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btnMinus"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn3"
        android:onClick="onClickBtnMinus" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/btnDot"
        android:layout_below="@+id/btn1"
        android:layout_alignEnd="@+id/btn1"
        android:onClick="onClickBtnDot" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/btn0"
        android:onClick="onClickBtn0"
        android:layout_alignTop="@+id/btnDot"
        android:layout_toEndOf="@+id/btnDot" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/btnC"
        android:onClick="onClickBtnC"
        android:layout_alignTop="@+id/btnDot"
        android:layout_toEndOf="@+id/btn0" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnPlus"
        android:onClick="onClickBtnPlus"
        android:layout_alignTop="@+id/btnDot"
        android:layout_toEndOf="@+id/btnC" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/btnEquals"
        android:onClick="onClickBtnEquals"
        android:layout_below="@+id/btnDot"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnPlus" />

</RelativeLayout>
